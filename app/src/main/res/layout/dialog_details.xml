<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@color/black">
    <ImageView
        android:id="@+id/backdrop"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="title"
        android:textColor="#FF3422"
        android:textSize="48sp"
        android:layout_margin="8sp"
        />
    <TextView
        android:id="@+id/overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="overview"
        android:textColor="@color/white"
        android:layout_margin="8sp"
        />
    <TextView
        android:id="@+id/vote_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="vote_average"
        android:textColor="@color/white"
        android:layout_margin="8sp"
        />
    <TextView
        android:id="@+id/budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="budget"
        android:textColor="@color/white"
        android:layout_margin="8sp"
        />
    <TextView
        android:id="@+id/genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="genres"
        android:textColor="@color/white"
        android:layout_margin="8sp"
        />
    <TextView
        android:id="@+id/production_companies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="production_companies"
        android:textColor="@color/white"
        android:layout_margin="8sp"
        />
    <TextView
        android:id="@+id/production_countries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="production_countries"
        android:textColor="@color/white"
        android:layout_margin="8sp"
        />
    <TextView
        android:id="@+id/release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="release_date"
        android:textColor="@color/white"
        android:layout_margin="8sp"
        />
    <TextView
        android:id="@+id/runtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="runtime"
        android:textColor="@color/white"
        android:layout_margin="8sp"
        />
    </LinearLayout>
</ScrollView>